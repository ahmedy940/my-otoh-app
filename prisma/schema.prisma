// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Campaign {
  id          Int      @id @default(autoincrement())
  name        String
  impressions Int
  clicks      Int
  spend       Float
  roas        Float
  launch      Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
